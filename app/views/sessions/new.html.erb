<h1>Sign In</h1>

<%= form_for(:session, url: login_path) do |f| %>

<table>
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.text_field :password %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "Sign In" %></td>
  </tr>
</table>

<p>Don't have an account yet? <%= link_to 'Sign up now!', new_user_path %></p>

<% end %>