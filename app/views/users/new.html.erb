<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>

<table>
    <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name %></td>
    </tr>
    <tr>
        <td><%= f.label :email %></td>
        <td><%= f.text_field :email %></td>
    </tr>
    <tr>
        <td><%= f.label :password %></td>
        <td><%= f.text_field :password %></td>
    </tr>
    <tr>
        <td><%= f.label :password_confirmation %></td>
        <td><%= f.text_field :password_confirmation %></td>
    </tr>
    <tr>
        <td></td>
        <td><%= f.submit "Sign Up" %></td>
    </tr>
</table>

<% end %>